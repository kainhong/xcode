<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">

    </extensions>

    <actions>
        <group id="$MybatisAnalyzer" text="Mybatis Analyzer" popup="true" icon="AllIcons.CodeWithMe.CwmPermissionView">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="AnalyzeMenu"/>
            <action id="mybatis.analyzer" class="cn.mercury.xcode.actions.project.AnalyzerAction" text="Mapper Analyzer">
            </action>
        </group>

        <action id="$CopySql" class="cn.mercury.xcode.mybatis.actions.CopySqlAction" text="复制SQL"
                icon="cn.mercury.xcode.mybatis.Icons.COPY_LOG"
                description="直接选中SQL和参数进行复制操作">
            <add-to-group group-id="ConsoleEditorPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C"/>
        </action>

        <action id="$ViewSql" class="cn.mercury.xcode.mybatis.actions.ViewSqlAction" text="ViewSql"
                description="预览Mapper Statement Sql" icon="JavaUltimateIcons.Javaee.Gutter.PersistenceMappedSuperclass">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

    </actions>
</idea-plugin>
